    <style name="CaptionOneLine" parent="Caption">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextHeader" parent="android:Widget.Material.TextView" tools:targetApi="lollipop">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextContent" parent="android:Widget.Material.Light.TextView" tools:targetApi="lollipop">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:textSize">@dimen/text_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextDescription" parent="android:Widget.Material.Light.TextView" tools:targetApi="lollipop">
        <item name="android:textColor">@android:color/tertiary_text_light</item>
        <item name="android:textSize">@dimen/text_description</item>
        <item name="android:textStyle">normal</item>
