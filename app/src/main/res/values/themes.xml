<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DevelopersLife" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DevelopersLife.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryColorDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryColorDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <!--Material Input Layout Theme-->
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="hintTextAppearance">@style/HintText</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textColorHint">@color/unfocusedColor</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/red</item>
        <item name="colorControlHighlight">@color/primaryColorDark</item>
    </style>

    <style name="EditTextSingleLineAppearanceWithDrawable" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_line_with_drawable_start</item>
        <item name="backgroundTint">@color/text_input_stroke</item>
        <item name="android:textCursorDrawable">@color/unfocusedColor</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="android:drawablePadding">@dimen/dim_16</item>
        <item name="android:paddingBottom">@dimen/dim_8</item>
        <item name="android:paddingTop">@dimen/dim_16</item>
    </style>

    <style name="EditTextSingleLineAppearance" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/edit_text_line_without_drawable_start</item>
        <item name="backgroundTint">@color/text_input_stroke</item>
        <item name="android:textCursorDrawable">@color/unfocusedColor</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:inputType">text</item>
        <item name="maxLines">1</item>
        <item name="android:paddingBottom">@dimen/dim_16</item>
        <item name="android:paddingTop">@dimen/dim_8</item>
    </style>

    <style name="SelectorTextView" parent="Widget.AppCompat.TextView">
        <item name="selectable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">@drawable/selectable_text_view</item>
        <item name="backgroundTint">@color/text_input_stroke</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawablePadding">@dimen/dim_16</item>
        <item name="android:paddingBottom">@dimen/dim_16</item>
        <item name="android:paddingTop">@dimen/dim_24</item>
    </style>

    <style name="SwitchTextAppearance" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="selectable">true</item>
        <item name="android:background">@drawable/edit_text_line_with_drawable_start</item>
        <item name="backgroundTint">@color/text_input_stroke</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:drawablePadding">@dimen/dim_16</item>
        <item name="android:paddingBottom">@dimen/dim_8</item>
        <item name="android:paddingTop">@dimen/dim_16</item>
    </style>

    <style name="ErrorText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="HintText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--DecoratorTextView-->
    <style name="DecoratorTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primaryColorLight</item>
        <item name="android:layout_marginStart">@dimen/dim_8</item>
        <item name="android:layout_marginTop">@dimen/dim_24</item>
        <item name="android:layout_marginBottom">@dimen/dim_8</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

